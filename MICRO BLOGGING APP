<body>

  <div class="container">
    <header>
      <h1>Microblogging App</h1>
      <p>Share your thoughts with the world!</p>
    </header>

    <div class="post-box">
      <textarea id="postInput" placeholder="What's on your mind?"></textarea>
      <button id="postButton">Post</button>
    </div>

    <div class="posts" id="postsContainer">
      <!-- Posts will appear here -->
    </div>
  </div>

  <script>
    const postButton = document.getElementById('postButton');
    const postInput = document.getElementById('postInput');
    const postsContainer = document.getElementById('postsContainer');

    let posts = []; // This will store posts temporarily

    // Function to render posts
    function renderPosts() {
      postsContainer.innerHTML = ''; // Clear posts container
      posts.forEach((post, index) => {
        const postDiv = document.createElement('div');
        postDiv.classList.add('post');
        
        const postText = document.createElement('p');
        postText.textContent = post.text;
        
        const editButton = document.createElement('button');
        editButton.textContent = 'Edit';
        editButton.classList.add('edit');
        editButton.onclick = () => editPost(index);

        const deleteButton = document.createElement('button');
        deleteButton.textContent = 'Delete';
        deleteButton.onclick = () => deletePost(index);
        
        postDiv.appendChild(postText);
        postDiv.appendChild(editButton);
        postDiv.appendChild(deleteButton);
        
        postsContainer.appendChild(postDiv);
      });
    }

    // Function to handle the posting
    postButton.addEventListener('click', () => {
      const text = postInput.value.trim();
      if (text !== '') {
        const newPost = {
          text: text
        };
        posts.push(newPost);
        postInput.value = ''; // Clear the input
        renderPosts(); // Re-render posts
      }
    });

    // Function to delete a post
    function deletePost(index) {
      posts.splice(index, 1); // Remove the post from the array
      renderPosts(); // Re-render posts
    }

    // Function to edit a post
    function editPost(index) {
      const newText = prompt('Edit your post:', posts[index].text);
      if (newText !== null && newText.trim() !== '') {
        posts[index].text = newText;
        renderPosts(); // Re-render posts
      }
    }
  </script>

</body>
</html>
